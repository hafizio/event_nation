<h1>Listing events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Agenda</th>
      <th>Address</th>
      <th>Organizer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date.strftime("%d/%m/%Y") %></td>
        <td><%= event.end_date.strftime("%d/%m/%Y") %></td>
        <td><%= event.location %></td>
        <td><%= event.agenda %></td>
        <td><%= event.address %></td>
        <td><%= event.organizer.email %></td>
        <td><%= link_to 'Show', event, class: 'button tiny radius success' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'button tiny radius success' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button tiny radius alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

